<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.music.MusicFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent">


        <TextView
            android:id="@+id/playing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/textOnBackground"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/playingOn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_margin="8dp"
            android:layout_marginBottom="8dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/textOnBackground"/>


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_margin="8dp"
        android:scaleType="fitCenter"
        tools:srcCompat="@drawable/widget_placeholder" />

        <TextView
            android:id="@+id/current_track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/textOnBackground"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/current_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_margin="8dp"
            android:layout_marginBottom="8dp"
            android:textAlignment="center"
            android:textColor="@color/textOnBackground"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:layout_marginTop="60dp"
            tools:ignore="MissingConstraints">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/skip_prev_button"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="?attr/actionBarItemBackground"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/btn_prev" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/play_pause_button"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/btn_play" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/skip_next_button"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="?attr/actionBarItemBackground"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/btn_next" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>