<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.location.LocationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/textLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:textAlignment="center"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/textOnBackground"/>

        <TextView
            android:id="@+id/textInUse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/textOnBackground"/>



        <LinearLayout
            android:id="@+id/linear_layout_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnUseSystem"
                android:layout_width="wrap_content"
                android:layout_height="60sp"
                android:layout_margin="8dp"
                android:text="Aktiver sporing"
                android:backgroundTint="@color/button"
                android:textColor="@color/textOnButton"/>
            <Button
                android:id="@+id/btnStopSystem"
                android:layout_width="wrap_content"
                android:layout_height="60sp"
                android:layout_margin="8dp"
                android:text="Deaktiver sporing"
                android:backgroundTint="@color/button"
                android:textColor="@color/textOnButton"/>
        </LinearLayout>

