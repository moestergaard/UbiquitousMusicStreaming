<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.Cat" parent="android:TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColorLink">@color/text_link</item>
    </style>

    <style name="TextAppearance.Cat.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Buttons -->

    <style name="Widget.Cat.Button" parent="Widget.AppCompat.Button">
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.Cat.Button</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:backgroundTint">@drawable/button_small</item>
        <item name="android:minHeight">@dimen/button_height</item>
    </style>

    <style name="Widget.Cat.Button.Small">
        <item name="android:layout_margin">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:background">@drawable/button_small</item>
        <item name="android:minHeight">@dimen/button_small_height</item>
    </style>
</resources>
